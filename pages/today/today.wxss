.video_group {
  background-color: #fff;
  width: 100%;
  box-sizing: border-box;
}

.group_item {
  margin: 40rpx 30rpx;
}

.group_item .item_video_wrap {
  position: relative;
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
}

.group_item .item_video_wrap .video {
  width: 100%;
  border-radius: 20rpx;
  height: 100%;
  vertical-align: middle;
  box-shadow: 2px 2px 10px #ccc;
}

.group_item .item_title {
  width: 100%;
  margin: 20rpx 0;
  font-size: 16px;
}

.video_but_txt {
  position: absolute;
  top: 18rpx;
  right: 20rpx;
  width: 100%;
  font-size: 10px;
  text-align: right;
}
.definition{
  position: absolute;
  top:0%;
  left:0%;
  width:100%;
  height:100%;
  background-color:rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.definition .def_list{
  margin:50% auto;
  display: flex;
  justify-content: center;
}
.definition .def_list .def_item{
  width:100rpx;
  height:60rpx;
  text-align: center;
  line-height:60rpx;
  background-color:#555;
  color: #fff;
  margin:0 14rpx;
  display: block;
  font-size: 10px;
  border-radius:8rpx;
  padding:0 6rpx;

}

.vid_footer {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  margin-top: 20rpx;
  width: 100%;
}

.video_contorl {
  display: flex;
  width: 30%;
  justify-content: space-between;
}