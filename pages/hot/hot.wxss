/* pages/hot/hot.wxss */
audio{
  background-color: #ccc;
  width: 100%;
  box-sizing: border-box;
}
.head{
  font-size: 16px;
  font-weight: 600;
  text-indent:1em;
  height:36rpx;
  line-height:36rpx;
  margin-top:20rpx;
}
.audio_list_group{
  display: flex;
  width: auto;
  height:100%;
  flex-wrap: nowrap;
  /* justify-content:space-between; */
  background-color: #fff;
}
.audio_list_group .list_item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin: 40rpx 30rpx;
  border-radius: 20rpx;
  background-color: #ccc;
}
 .img{
  width:100rpx;
  height:100rpx;
  border-radius:20rpx;

}
 .name{
  font-size: 12px;
  text-align: center;
  line-height:20rpx;
  display: block;
}
.scroll-view_H{
  width: 100%;
  white-space: nowrap; 
  border-radius:20rpx;
  display: flex;
  flex-wrap: wrap;
  margin-top:20rpx;
  background-color: #fff;
}
.scroll-view-item_H{
  width: 260rpx;
  height: auto;
  display: inline-block;
  text-align: center;
}