.apply{
	position: absolute;
	width: 175rpx;
	height: 70rpx;
	line-height: 70rpx;
	text-align: center;
	background: -webkit-linear-gradient(right, #FF9C00 , #FF9C00); /* Safari 5.1 - 6.0 */                   
  background: -o-linear-gradient(left, #FF9C00, #FF9C00); /* Opera 11.1 - 12.0 */                   
  background: -moz-linear-gradient(left, #FF9C00, #FF9C00); /* Firefox 3.6 - 15 */                   
  background: linear-gradient(to left, #FF9C00 , #FF9C00); /* 标准的语法 */
	right: 0;
	top: 100rpx;
	color: #fff;
	border-radius: 35rpx 0 0 35rpx;
}
.list{
  padding: 0 30rpx;
  box-shadow: 0 0 9rpx rgba(0, 0, 0, 0.14);
  background-color: #fff;
  margin-bottom: 20rpx;
}

.item{
  position: relative;
  height: 110rpx;
  line-height: 110rpx;
  color: #333;
  padding-left: 64rpx;
}
.item image{
  position: absolute;
  width: 44rpx;
  height: 44rpx;
  left: 0;
  top:33rpx;
}
.item:not(:last-child){ border-bottom: 1rpx solid #dedede;}
.item:after{
  content: '';
  position: absolute;
  width: 18rpx;
  height: 18rpx;
  border-top: 1rpx solid #666;
  border-right: 1rpx solid #666;
  transform: rotate(45deg);
  -ms-transform:rotate(45deg); 	/* IE 9 */
  -moz-transform:rotate(45deg); 	/* Firefox */
  -webkit-transform:rotate(45deg); /* Safari 和 Chrome */
  -o-transform:rotate(45deg); 
  right:0rpx;
  top: 44rpx;
}
.msg{
	position: absolute;
	width: 40rpx;
	height: 40rpx;
	line-height: 40rpx;
	text-align: center;
	border-radius: 50%;
	background: #F04964;
	color: #fff;
	font-size: 24rpx;
	right: 30rpx;
	top: 35rpx;
}
.contact{
  position: absolute;
  right:30rpx;
  top:0;
  height: 110rpx;
  line-height: 110rpx;
  color: #999;
  font-size: 24rpx;
}
